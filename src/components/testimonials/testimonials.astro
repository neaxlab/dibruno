        }

        .section:nth-child(11) .section-image {
            justify-content: flex-end;
        }

        .section-image img {
            max-width: 50%;
            height: 384px;
            object-fit: cover;
            border-radius: 0;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .overlay-title {
                font-size: 32px;
            }
            
            .overlay-subtitle {
                font-size: 1.2rem;
            }
            
            
            
            .overlay-title-left,
            .overlay-title-right {
                text-align: center;
                margin-left: auto;
                margin-right: auto;
            }
            
            .section {
                flex-direction: column !important;
                text-align: center;
            }
            
            .section-title {
                font-size: 2rem;
            }
            
            .section-text {
                font-size: 1rem;
            }
