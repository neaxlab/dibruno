---
import { Bullet } from '../ui/buttons/Bullet';
import ButtonSlide from '../ui/buttons/ButtonSlide';
import InstructionsCarousel from '../commons/instructionsCarousel';
import { getProductByHandle } from '../../utils/shopify';

// Orden y handlers de productos en Shopify
const productHandles = [
  'shieldmist-spray-anagen-protection',
  'rootpure-shampoo-anagen-regrowth',
  'vitalush-serum-anagen-growth',
  'sproutmist-spray-anagen-growth',
  'rootflourish-mask-anagen-growth'
];


const buyerIP = Astro.request.headers.get('x-forwarded-for') || '127.0.0.1';
const productsLite = await Promise.all(
  productHandles.map(async (handle) => {
    try {
      const p = await getProductByHandle({ handle, buyerIP });
      return { title: p?.title || '', handle: p?.handle || handle, howToUse: p?.howToUse || null, image: p?.featuredImage?.url || '' };
    } catch {
      return { title: '', handle, howToUse: null };
    }
  })
);
const instructions = Object.fromEntries(
  productsLite.map((p, idx) => [
    String(idx + 1),
    {
      url: p.handle ? `/products/${p.handle}` : '#',
      image: '/images/products/dibrunoShampoo.png',
      alt: p.title,
      // recomendations: '',
      instructions: [] as any[],
    }
  ])
);
---

<script define:vars={{ instructions, productsLite }}>
    window.instructions = instructions;
    window.productsLite = productsLite;
</script>


