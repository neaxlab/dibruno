---
import AnimatedLink from '../ui/buttons/AnimatedLink.tsx';
---

<section class="max-w-screen-2xl mx-auto font-sans sm:py-section-d-gap-y py-section-m-gap-y flex flex-col gap-10">
    <div class="flex flex-row justify-between items-end gap-10">
        <h2 class="text-d-title-1 text-primary-olive">
            MEET THE PEOPLE <br />
            <span class="text-primary-olive ml-[90px]">
                BEHIND THE <div class="inline-block relative w-fit">RESULTS<span class="absolute -bottom-1 left-0 w-full bg-[#94B1B7] h-1/2 z-[-1]"></span></div>
            </span>
        </h2>
        <AnimatedLink
            text="EXPLORE ALL TESTIMONIALS"
            className="text-d-button text-primary-granite"
            animationDuration={0.5}
            linePosition={-8}
        />
    </div>
</section>