---
// Importar estilos globales
import "../styles/global.css";
import Navbar from "@/components/commons/navbar.astro";
import Footer from "@/components/commons/footer.astro";
import CartDrawer from "@/components/cart/CartDrawer.tsx";

export interface Props {
	title?: string;
	description?: string;
}

const {
	title = "DiBruno Lab – Vegan Hair Regrowth & Anti-Hair-Loss Solutions",
	description = "Explore DiBruno Lab’s 100% vegan, organic formulas for hair regrowth and anti-hair-loss. Clinically proven, eco-friendly, cruelty-free – reclaim stronger, healthier hair.",
} = Astro.props as Props;

const FB_PIXEL_ID = '25194880230109237';
const fbPixelHeadHtml = `<!-- Facebook Pixel Code -->\n<script>\n!function(f,b,e,v,n,t,s)\n{if(f.fbq)return;n=f.fbq=function(){n.callMethod?\n n.callMethod.apply(n,arguments):n.queue.push(arguments)};\nif(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';\n n.queue=[];t=b.createElement(e);t.async=!0;\n t.src=v;s=b.getElementsByTagName(e)[0];\n s.parentNode.insertBefore(t,s)}(window,document,'script',\n 'https://connect.facebook.net/en_US/fbevents.js');\n fbq('init', '${FB_PIXEL_ID}');\n fbq('track', 'PageView');\n</script>\n<!-- End Facebook Pixel Code -->`;
const fbPixelNoScriptHtml = `<noscript><img height="1" width="1" src="https://www.facebook.com/tr?id=${FB_PIXEL_ID}&ev=PageView&noscript=1" /></noscript>`;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
		<meta name="description" content={description} />
		
		<!-- Open Graph / Facebook / WhatsApp -->
		<meta property="og:title" content={title}>
		<meta property="og:description" content={description}>
		<meta property="og:image" content="/images/home/DiBrunoLab-OG.png"> 
		<meta property="og:url" content={Astro.url.href}>
		<meta property="og:type" content="website">
	  
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content={title}>
		<meta name="twitter:description" content={description}>
		<meta name="twitter:image" content="/images/home/DiBrunoLab-TW.png">
		<Fragment set:html={fbPixelHeadHtml} />
	</head>
	<body>
		<Fragment set:html={fbPixelNoScriptHtml} />
		<Navbar />
		<div class="w-full h-full sm:p-2 p-1">
			<slot />
			<Footer />
		</div>
		<CartDrawer client:load />
	</body>
</html>
