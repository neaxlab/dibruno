---
// Importar estilos globales
import "../styles/global.css";
import Navbar from "@/components/commons/navbar.astro";
import Footer from "@/components/commons/footer.astro";
import CartDrawer from "@/components/cart/CartDrawer.tsx";
import SEO from "@/components/commons/SEO.astro";

export interface Props {
	title?: string;
	description?: string;
	canonicalUrl?: string;
	productImage?: string;
	productSchema?: any;
}

const {
	title = "DiBruno Lab – Vegan Hair Regrowth & Anti-Hair-Loss Solutions",
	description = "Explore DiBruno Lab's 100% vegan, organic formulas for hair regrowth and anti-hair-loss. Clinically proven, eco-friendly, cruelty-free – reclaim stronger, healthier hair.",
	canonicalUrl,
	productImage,
	productSchema,
} = Astro.props as Props;

const FB_PIXEL_ID = '1463100791408291';
const fbPixelHeadHtml = `<!-- Facebook Pixel Code -->\n<script>\n!function(f,b,e,v,n,t,s)\n{if(f.fbq)return;n=f.fbq=function(){n.callMethod?\nn.callMethod.apply(n,arguments):n.queue.push(arguments)};\nif(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';\nn.queue=[];t=b.createElement(e);t.async=!0;\nt.src=v;s=b.getElementsByTagName(e)[0];\ns.parentNode.insertBefore(t,s)}(window,document,'script',\n'https://connect.facebook.net/en_US/fbevents.js');\nfbq('init', '${FB_PIXEL_ID}');\nfbq('track', 'PageView');\n</script>\n<!-- End Facebook Pixel Code -->`;
const fbPixelNoScriptHtml = `<noscript>\n<img height="1" width="1" src="https://www.facebook.com/tr?id=${FB_PIXEL_ID}&ev=PageView&noscript=1"/>\n</noscript>`;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
		<meta name="description" content={description} />
		
		<!-- Canonical URL -->
		{canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
		
		<!-- Open Graph / Facebook / WhatsApp -->
		<meta property="og:title" content={title}>
		<meta property="og:description" content={description}>
		<meta property="og:image" content={productImage || "/images/home/DiBrunoLab-OG.png"}> 
		<meta property="og:url" content={canonicalUrl || Astro.url.href}>
		<meta property="og:type" content={productSchema ? "product" : "website"}>
		{productSchema && <meta property="og:price:amount" content={productSchema.offers?.price || ""} />}
		{productSchema && <meta property="og:price:currency" content={productSchema.offers?.priceCurrency || ""} />}
	  
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content={title}>
		<meta name="twitter:description" content={description}>
		<meta name="twitter:image" content={productImage || "/images/home/DiBrunoLab-TW.png"}>

		<!-- Datos estructurados Schema.org -->
		{productSchema && <script type="application/ld+json" set:html={JSON.stringify(productSchema)} />}
		
		<!-- Meta tags SEO adicionales -->
		<SEO 
			title={title}
			description={description}
			image={productImage}
			url={canonicalUrl}
			type={productSchema ? "product" : "website"}
			price={productSchema?.offers?.price}
			currency={productSchema?.offers?.priceCurrency}
			availability={productSchema?.offers?.availability}
		/>
		
		<Fragment set:html={fbPixelHeadHtml} />
	</head>
	<body data-page={Astro.url.pathname}>
		<Fragment set:html={fbPixelNoScriptHtml} />
		<Navbar />
		<div class="w-full h-full sm:p-2 p-1">
			<slot />
			<Footer />
		</div>
		<CartDrawer client:load />
	</body>
</html>
