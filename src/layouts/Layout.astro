---
// Importar estilos globales
import "../styles/global.css";
import Navbar from "@/components/commons/navbar.astro";
import Footer from "@/components/commons/footer.astro";
import CartDrawer from "@/components/cart/CartDrawer.tsx";
import SEO from "@/components/commons/SEO.astro";
import WhatsAppButton from "@/components/commons/WhatsAppButton.tsx";
import Analytics from '@vercel/analytics/astro'

export interface Props {
	title?: string;
	description?: string;
	canonicalUrl?: string;
	productImage?: string;
	productSchema?: any;
}

const {
	title = "DiBruno Lab – Vegan Hair Regrowth & Anti-Hair-Loss Solutions",
	description = "Explore DiBruno Lab's 100% vegan, organic formulas for hair regrowth and anti-hair-loss. Clinically proven, eco-friendly, cruelty-free – reclaim stronger, healthier hair.",
	canonicalUrl,
	productImage,
	productSchema,
} = Astro.props as Props;

const FB_PIXEL_ID = '1463100791408291';
---

<!doctype html>
<html lang="es" data-fb-pixel-id={FB_PIXEL_ID} data-currency={productSchema?.offers?.priceCurrency || 'USD'} data-product-value={productSchema?.offers?.price}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
		<meta name="description" content={description} />
		
		<!-- Canonical URL -->
		{canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
		
		<!-- Open Graph / Facebook / WhatsApp -->
		<meta property="og:title" content={title}>
		<meta property="og:description" content={description}>
		<meta property="og:image" content={productImage || "/images/home/DiBrunoLab-OG.png"}> 
		<meta property="og:url" content={canonicalUrl || Astro.url.href}>
		<meta property="og:type" content={productSchema ? "product" : "website"}>
		{productSchema && <meta property="og:price:amount" content={productSchema.offers?.price || ""} />}
		{productSchema && <meta property="og:price:currency" content={productSchema.offers?.priceCurrency || ""} />}
	  
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content={title}>
		<meta name="twitter:description" content={description}>
		<meta name="twitter:image" content={productImage || "/images/home/DiBrunoLab-TW.png"}>

		<!-- Datos estructurados Schema.org -->
		{productSchema && <script type="application/ld+json" set:html={JSON.stringify(productSchema)} />}
		
		<!-- Meta tags SEO adicionales -->
		<SEO 
			title={title}
			description={description}
			image={productImage}
			url={canonicalUrl}
			type={productSchema ? "product" : "website"}
			price={productSchema?.offers?.price}
			currency={productSchema?.offers?.priceCurrency}
			availability={productSchema?.offers?.availability}
		/>
		
		<script is:inline>
			(function(){
				var doc = document;
				var id = doc.documentElement.getAttribute('data-fb-pixel-id');
				var defaultCurrency = doc.documentElement.getAttribute('data-currency') || 'USD';
				var defaultValueStr = doc.documentElement.getAttribute('data-product-value');
				var defaultValue = defaultValueStr ? parseFloat(defaultValueStr) : undefined;
				!function(f,b,e,v,n,t,s){
					if(f.fbq) return;
					n=f.fbq=function(){ n.callMethod ? n.callMethod.apply(n,arguments) : n.queue.push(arguments) };
					if(!f._fbq) f._fbq=n;
					n.push=n; n.loaded=!0; n.version='2.0';
					n.queue=[];
					t=b.createElement(e); t.async=!0;
					t.src=v;
					s=b.getElementsByTagName(e)[0];
					s.parentNode.insertBefore(t,s);
				}(window, document, 'script', 'https://connect.facebook.net/en_US/fbevents.js');
				if (id) {
					fbq('init', id);
					fbq('track', 'PageView');
					window.fbTrackWithDefaults = function(eventName, data){
						try {
							var payload = data || {};
							if (payload.value == null && typeof defaultValue !== 'undefined') {
								payload.value = defaultValue;
							}
							if (!payload.currency) {
								payload.currency = defaultCurrency;
							}
							fbq('track', eventName, payload);
						} catch(_e) {}
					};
					if (typeof defaultValue !== 'undefined') {
						window.fbTrackWithDefaults('ViewContent', {});
					}
				}
			})();
		</script>
		<Analytics />
	</head>
	<body data-page={Astro.url.pathname}>
		<noscript>
			<img height="1" width="1" src={`https://www.facebook.com/tr?id=${FB_PIXEL_ID}&ev=PageView&noscript=1`} />
		</noscript>
		<img src="https://tracker.metricool.com/c3po.jpg?hash=f2035f0614494f5f5b6865f57462f8b1" alt="" style="position:absolute;width:1px;height:1px;opacity:0;" />
		<WhatsAppButton />
		<Navbar />
		<div class="w-full h-full sm:p-2 p-1">
			<slot />
			<Footer />
		</div>
		<CartDrawer client:load />
	</body>
</html>
